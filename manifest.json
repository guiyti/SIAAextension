{
    "manifest_version": 3,
    "name": "SIAA Data Extractor",
    "version": "2.0.5",
    "description": "Extrair e visualizar dados acadêmicos do SIAA - Cruzeiro do Sul. Interface responsiva e filtros avançados.",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://siaa.cruzeirodosul.edu.br/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://siaa.cruzeirodosul.edu.br/novo-siaa/secure/core/home.jsf*"
            ],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "SIAA Data Extractor - Ferramenta Profissional de Análise Acadêmica",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": ["injected.js", "viewer.html", "viewer.js", "siaa-config.json", "xml-processor.js", "config-manager.js"],
            "matches": ["https://siaa.cruzeirodosul.edu.br/*", "<all_urls>"]
        }
    ]
} 